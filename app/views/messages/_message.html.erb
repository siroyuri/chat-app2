<div class="message">
   <div class="message-data">
      <div class="name">
         <%= message.user.name %>
      </div>
      <div class="date">
         <%= l message.created_at %>
      </div>
   </div>
   <div class="message-content">
      <div class="content">
         <%= message.content %>
      </div>
   </div>
</div>